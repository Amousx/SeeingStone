# Aster API配置
ASTER_API_KEY=your_api_key
ASTER_SECRET_KEY=your_secret_key

# Telegram通知（可选）
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id
ENABLE_NOTIFICATION=false

# 监控参数
MIN_SPREAD_PERCENT=0.1        # 最小价差阈值（仅影响Telegram通知）
UPDATE_INTERVAL=1             # UI刷新间隔（秒）

# Lighter配置
LIGHTER_MARKET_REFRESH_INTERVAL=10  # Lighter市场刷新间隔（分钟），0表示禁用自动刷新

# OKX DEX配置
OKX_API_CONFIG=config/okx_api_keys.txt  # OKX API配置文件（每行: APIKey,SecretKey,Passphrase）
OKX_TOKEN_CONFIG=config/okx_tokens.txt   # OKX代币配置文件
OKX_UPDATE_INTERVAL=30                   # OKX价格更新间隔（秒）

# OKX并行优化配置
OKX_PARALLEL_MODE=true                   # 启用并行模式（bid/ask同时查询），默认true
OKX_MAX_SPREAD_PERCENT=5.0               # 最大bid-ask价差百分比，超过将记录警告，默认5%
OKX_MAX_PRICE_CHANGE_PERCENT=30.0        # 最大价格变化百分比（与历史价格对比），默认30%
OKX_REJECT_INVALID_PRICES=false          # 是否拒绝异常价格（false=仅警告，true=拒绝），默认false

# 性能配置
MAX_GOROUTINES=100           # 最大并发数
